generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x", "linux-musl-arm64-openssl-3.0.x"]
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id            Int             @id @default(autoincrement())
  name          String          @unique
  description   String?
  logoUrl       String?         @unique
  details       OrgDetail[]
  projects      Project[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@index([name])
}

model OrgDetail {
  id            Int             @id @default(autoincrement())
  org           Organization    @relation(fields: [orgId], references: [id], onDelete: Cascade)
  orgId         Int
  year          Int
  term          Int
  projects      Project[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@unique([orgId, year, term])
  @@index([year, term])
}

model Project {
  id            Int             @id @default(autoincrement())
  org           Organization    @relation(fields: [orgId], references: [id], onDelete: Cascade)
  orgId         Int
  orgDetail     OrgDetail       @relation(fields: [orgDetailId], references: [id], onDelete: Cascade)
  orgDetailId   Int
  title         String
  upstreamIssue String?
  lfxUrl        String?
  skills        ProjectSkill[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@index([orgDetailId])
  @@index([orgId])
}

model Skill {
  id        Int             @id @default(autoincrement())
  name      String          @unique
  projects  ProjectSkill[]
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
}

model ProjectSkill {
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId Int
  skill     Skill   @relation(fields: [skillId], references: [id], onDelete: Cascade)
  skillId   Int
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  @@id([projectId, skillId])
}